#:kivy 1.0.9

<Root>:
    orientation: 'vertical'
    RecordButton:
        id: record_button
        text: 'Click to Speech'
        on_release: self.record()
        height: '50dp'
        size_hint_y: None
	
	TextInput:
        text: record_button.inputarea
        readonly: True
		
    TextInput:
        text: record_button.output
        readonly: True
		
	
